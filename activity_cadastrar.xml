<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginBottom="10dp">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/imp1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:theme="@style/FormTextInputLayoutTheme"
            app:hintTextAppearance="@style/FormTextInputLayou"
            >

            <EditText
                android:id="@+id/txtNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_10"
                android:hint="@string/nome_completo"
                android:singleLine="true"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/font_16" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/imp2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imp1"
            android:theme="@style/FormTextInputLayoutTheme"
            app:hintTextAppearance="@style/FormTextInputLayou"
            >

            <EditText
                android:id="@+id/txtCPF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_10"
                android:hint="@string/cpf"
                android:singleLine="true"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/font_16" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/imp3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imp2"
            android:theme="@style/FormTextInputLayoutTheme"
            app:hintTextAppearance="@style/FormTextInputLayou"
            >

            <EditText
                android:id="@+id/txtTelefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_10"
                android:hint="@string/telefone"
                android:singleLine="true"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/font_16" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/imp4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imp3"
            android:theme="@style/FormTextInputLayoutTheme"
            app:hintTextAppearance="@style/FormTextInputLayou"
            >

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_10"
                android:hint="@string/email"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="@color/white"

                android:textSize="@dimen/font_16" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/imp5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imp4"
            android:theme="@style/FormTextInputLayoutTheme"
            app:hintTextAppearance="@style/FormTextInputLayou"
            >
            <EditText
                android:id="@+id/txtSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_10"
                android:hint="@string/senha"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/font_16" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imp5"
            android:layout_marginTop="25dp"
            android:background="@color/product_name_color"
            android:padding="@dimen/margin_10"
            android:text="@string/cadastrar"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>
